<?xml version="1.0" encoding="UTF-8"?>
<Context path="/Demo09_JPA">
    <Resource
        name="jdbc/notesdb"
        url="jdbc:mysql://localhost:3306/notesdb"
        username="root"
        password="password"
        driverClassName="com.mysql.jdbc.Driver"
        maxActive="100"
        maxIdle="30"
        maxWait="10000" 
        logAbandoned="true"
        removeAbandoned="true" 
        removeAbandonedTimeout="60"
        auth="Container"
        type="javax.sql.DataSource"
    />
</Context>
